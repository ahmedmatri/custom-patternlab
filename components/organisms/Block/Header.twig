<div class="header-wrapper">
    <header class="header">
        <div class="header-wrap"
             style="background-image: url('http://web-kit.hbku.edu.qa/images/header-bg.png'); background-size: cover;">
            <div class="container">
                <div class="d-flex flex-wrap justify-content-center">
                    <h1 class="logo d-flex align-items-center mb-md-0 me-md-auto">
                        <a title="Hamad Bin Khalifa University" href="#">
                            <img src="http://web-kit.hbku.edu.qa/images/logo.svg" alt="Hamad Bin Khalifa University"
                                 title="Hamad Bin Khalifa University"/>
                            <img class="sticky-logo" src="http://web-kit.hbku.edu.qa/images/hbku-rgb.svg"
                                 alt="Hamad Bin Khalifa University" title="Hamad Bin Khalifa University"/>
                        </a>
                    </h1>
                    <div class="nav-global d-flex flex-wrap justify-content-center">
                        <div class="mainMenu closed">
                            <button class="close-btn d-none"><i class="fa fa-times"></i></button>
                            {% if main_menu %}
                                {{ main_menu }}
                            {% else %}
                                <ul class="nav nav-main menu">
                                    <li class="nav-item dropdown"><a href="#" class="nav-link" id="about-us">About
                                            Us</a>
                                    </li>
                                    <li class="nav-item dropdown"><a href="#" class="nav-link"
                                                                     id="admissions">Admissions</a></li>
                                    <li class="nav-item"><a href="#" class="nav-link" id="academic">Academic</a></li>
                                    <li class="nav-item"><a href="#" class="nav-link" id="research">Research</a></li>
                                    <li class="nav-item"><a href="#" class="nav-link" id="innovation">Innovation</a>
                                    </li>
                                    <li class="nav-item"><a href="#" class="nav-link" id="university-life">University
                                            Life</a></li>
                                </ul>
                            {% endif %}
                        </div>
                        <div class="nav-sub">
                            <ul>
                                <li class="lang">
                                    <ul class="lang-switcher navbar-right">
                                        {% if languages %}

                                            {% for key,item in languages['#links'] %}
                                                <li class="first {{ languages['#current_lang'] == key ? 'active' }}">
                                                    <a href="{{ item.url }}"
                                                       class="{{ languages['#current_lang'] == key ? 'active' }}">{{ (key == 'ar') ? 'العربية' : 'English' }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        {% else %}
                                            <li class="first active"><a href="/en" class="language-link active"
                                                                        xml:lang="en">English</a></li>
                                            <li class="last"><a href="/ar" class="language-link"
                                                                xml:lang="ar">العربية</a></li>

                                        {% endif %}
                                    </ul>
                                </li>
                                <li class="search">
                                    <i class="fa-sharp fa-solid fa-magnifying-glass" data-bs-toggle="modal"
                                       data-bs-target="#searchModal"></i>

                                </li>
                                <li class="login">
                                    <div class="dropdown">
                                        <a href="#" class="d-block" id="login" data-bs-toggle="dropdown"
                                           aria-expanded="false">
                                            <i class="fa-sharp fa-solid fa-circle-user"></i>
                                        </a>
                                        <ul class="dropdown-menu text-small dropdown-toggle" aria-labelledby="login"
                                            style="">
                                            {% if content.user_menu %}
                                                {% for item in content.user_menu['#items'] %}
                                                    <li>   {{ link(item.title, item.url, { 'class':['dropdown-item']} ) }} </li>
                                                {% endfor %}
                                            {% else %}
                                                <li><a class="dropdown-item" href="#" target="_blank">Student</a></li>
                                                <li><a class="dropdown-item" href="#" target="_blank">Faculty</a></li>
                                            {% endif %}
                                        </ul>
                                    </div>
                                </li>
                                <li class="accessibility" data-bs-toggle="offcanvas"
                                    data-bs-target="#accessibilityNavbar" aria-controls="accessibilityNavbar">
                                    <span class="accessibility--icon"><i class="fas fa-universal-access"></i></span>
                                    <span class="accessibility--text">Accessibility</span>
                                </li>
                            </ul>
                        </div>
                        <button class="btn nav-main-toggle"><i class="fa fa-bars"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="header__dropdown mega-dropdown">
            <button class="close-btn d-none"><i class="fa fa-times"></i></button>
