{% set bakcground = img ?: '../../../images/library.jpg' %}


<section class="m-wrap section-glance" style="background-image:url({{ bakcground }})">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="glance">
          <h2 class="text-white">{{ title }}</h2>
          <div class="text-white">{{ description }}</div>
          <div class="glance__list">
            {% if items %}
              {% for item in items %}
                {{ items }}
              {% endfor %}
            {% else %}
              {% for data in glance.datas %}
                {% include 'molecules/items/glance.twig' with {
                  "key" : data.key,
                  "value" : data.value
                } %}
              {% endfor %}
            {% endif %}
          </div>
        </div>

      </div>
    </div>
  </div>
</section>
