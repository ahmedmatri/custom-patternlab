<div class="accordion-item">
    <h4 class="accordion-header" id="flush-headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#{{ 'flush-collapse'~paragraph.id() }}" aria-expanded="false"
                aria-controls="{{ 'flush-collapse'~paragraph.id() }}">
            {{ title }}
        </button>
    </h4>
    <div id="{{ 'flush-collapse'~paragraph.id() }}" class="accordion-collapse collapse"
         aria-labelledby="flush-headingTwo" data-bs-parent="#accordionFlush">
        <div class="accordion-body">
            <div class="row">
                <div class="col-md-4">
                    <figure class="figure">
                        {{ media }}
                        <figcaption class="figure-caption">A caption for the above image.
                        </figcaption>
                    </figure>
                </div>
                <div class="col-md-8">
                    {{ description }}
                </div>
            </div>
        </div>
    </div>
</div>